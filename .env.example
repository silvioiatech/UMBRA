# UMBRA MCP Configuration Template
# Copy this file to .env and configure with your actual values

# Required - Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Required - Get from @userinfobot (comma-separated list)
ALLOWED_USER_IDS=123456789

# Required - Admin user IDs (comma-separated list)
ALLOWED_ADMIN_IDS=123456789

# Optional - AI capabilities (get from openrouter.ai)
OPENROUTER_API_KEY=

# Optional - OpenRouter model selection
OPENROUTER_MODEL=anthropic/claude-3-haiku

# Optional - System configuration
DATABASE_PATH=data/umbra.db
LOG_LEVEL=INFO
ENVIRONMENT=production
PORT=8000

# Optional - Feature flags (true/false)
FEATURE_AI_INTEGRATION=true
FEATURE_METRICS_COLLECTION=true
FEATURE_FINANCE_OCR=false
FEATURE_SSH_OPERATIONS=false
FEATURE_WORKFLOW_AUTOMATION=false
FEATURE_MEDIA_GENERATION=false
FEATURE_DETAILED_LOGGING=false

# Optional - VPS/SSH Configuration (for Concierge module)
VPS_HOST=
VPS_USER=
VPS_SSH_KEY_PATH=

# Optional - Docker Configuration (for Concierge Auto-Update Watcher)
DOCKER_AVAILABLE=false
DOCKER_AUTO_UPDATE_ENABLED=false
DOCKER_AUTO_UPDATE_SCHEDULE=0 2 * * *
DOCKER_UPDATE_CHECK_INTERVAL=3600

# Optional - n8n Workflow Automation (for Production module)
N8N_API_URL=
N8N_API_KEY=

# Optional - Cloudflare R2 Storage (for enhanced features)
R2_ENDPOINT=
R2_ACCESS_KEY=
R2_SECRET_KEY=
R2_BUCKET_NAME=

# Optional - External API keys (for enhanced functionality)
FINANCIAL_API_KEY=
WEATHER_API_KEY=
NEWS_API_KEY=