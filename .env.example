# UMBRA MCP Configuration Template
# Copy this file to .env and configure with your actual values

# Required - Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Required - Get from @userinfobot (comma-separated list)
ALLOWED_USER_IDS=123456789

# Required - Admin user IDs (comma-separated list)
ALLOWED_ADMIN_IDS=123456789

# Optional - AI capabilities (get from openrouter.ai)
OPENROUTER_API_KEY=

# Optional - OpenRouter model selection
OPENROUTER_MODEL=anthropic/claude-3-haiku

# Optional - System configuration
DATABASE_PATH=data/umbra.db
LOG_LEVEL=INFO
ENVIRONMENT=production
PORT=8000

# Optional - Feature flags (true/false)
FEATURE_AI_INTEGRATION=true
FEATURE_METRICS_COLLECTION=true
FEATURE_FINANCE_OCR=false
FEATURE_SSH_OPERATIONS=false
FEATURE_WORKFLOW_AUTOMATION=false
FEATURE_MEDIA_GENERATION=false
FEATURE_DETAILED_LOGGING=false

# Optional - VPS/SSH Configuration (for Concierge module)
VPS_HOST=
VPS_USER=
VPS_SSH_KEY_PATH=

# Optional - n8n Workflow Automation (for Production module)
N8N_API_URL=
N8N_API_KEY=

# Optional - Cloudflare R2 Storage (for enhanced features)
R2_ENDPOINT=
R2_ACCESS_KEY=
R2_SECRET_KEY=
R2_BUCKET_NAME=

# Optional - External API keys (for enhanced functionality)
FINANCIAL_API_KEY=
WEATHER_API_KEY=
NEWS_API_KEY=

# ===============================
# CREATOR MODULE CONFIGURATION
# ===============================

# Text Generation (OpenRouter first; Creator-level override optional)
CREATOR_OPENROUTER_MODEL_TEXT=anthropic/claude-3.5-sonnet:beta

# Images - Choose provider and set corresponding API key
CREATOR_IMAGE_PROVIDER=stability       # stability|openai|replicate
CREATOR_STABILITY_API_KEY=
CREATOR_OPENAI_API_KEY=
CREATOR_REPLICATE_API_TOKEN=

# Video - Choose provider and set corresponding API key
CREATOR_VIDEO_PROVIDER=replicate       # pika|runway|replicate
CREATOR_PIKA_API_KEY=
CREATOR_RUNWAY_API_KEY=
# CREATOR_REPLICATE_API_TOKEN=        # reused if replicate

# Audio / TTS - Choose provider and set corresponding API key
CREATOR_TTS_PROVIDER=elevenlabs        # elevenlabs|openai
CREATOR_ELEVENLABS_API_KEY=
# CREATOR_OPENAI_API_KEY=             # reused if openai tts

# Music - Choose provider and set corresponding API key
CREATOR_MUSIC_PROVIDER=replicate       # suno|replicate
CREATOR_SUNO_API_KEY=
# CREATOR_REPLICATE_API_TOKEN=        # reused if replicate

# ASR / Subtitles - Choose provider and set corresponding API key
CREATOR_ASR_PROVIDER=openai            # openai|deepgram
# CREATOR_OPENAI_API_KEY=             # reused if openai
CREATOR_DEEPGRAM_API_KEY=

# R2 Storage for Creator (shared; used by Creator to persist assets)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=umbra
R2_ENDPOINT=https://<account>.r2.cloudflarestorage.com
R2_MAX_FILE_SIZE=52428800              # 50MB default