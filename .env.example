# ========================================
# REQUIRED CORE CONFIGURATION
# ========================================

# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get user IDs from @userinfobot (comma-separated)
ALLOWED_USER_IDS=123456789,987654321

# Admin user IDs (comma-separated)
ALLOWED_ADMIN_IDS=123456789

# ========================================
# RAILWAY DEPLOYMENT CONFIGURATION
# ========================================

# Railway automatically sets PORT, but you can override for local development
# PORT=8000

# Timezone for Swiss operations
LOCALE_TZ=Europe/Zurich

# Privacy mode for production
PRIVACY_MODE=strict

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MIN=20

# ========================================
# CLOUDFLARE R2 OBJECT STORAGE (F4R2)
# ========================================

# Required for F4R2 object storage features
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET=your_bucket_name
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# ========================================
# OPENROUTER AI CONFIGURATION (F3R1)
# ========================================

# Get from openrouter.ai for AI capabilities
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet:beta
OPENROUTER_REQUEST_TIMEOUT_MS=20000

# Optional per-role model overrides (fallback to default)
# OPENROUTER_MODEL_PLANNER=anthropic/claude-3-haiku:beta
# OPENROUTER_MODEL_BUILDER=openai/gpt-4o-mini
# OPENROUTER_MODEL_CONTROLLER=anthropic/claude-3.5-sonnet:beta
# OPENROUTER_MODEL_CHAT=anthropic/claude-3.5-sonnet:beta

# ========================================
# LEGACY OPENROUTER (OPTIONAL)
# ========================================

# Legacy settings (use new OPENROUTER_* settings above instead)
# OPENROUTER_API_KEY=your_openrouter_api_key
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# OPENROUTER_DEFAULT_MODEL=anthropic/claude-3-haiku

# ========================================
# CREATOR MODULE PROVIDERS (OPTIONAL)
# ========================================

# Image Generation
# CREATOR_IMAGE_PROVIDER=openai
# CREATOR_STABILITY_API_KEY=your_stability_key
# CREATOR_OPENAI_API_KEY=your_openai_key
# CREATOR_REPLICATE_API_TOKEN=your_replicate_token

# Video Generation
# CREATOR_VIDEO_PROVIDER=pika
# CREATOR_PIKA_API_KEY=your_pika_key
# CREATOR_RUNWAY_API_KEY=your_runway_key

# Text-to-Speech
# CREATOR_TTS_PROVIDER=elevenlabs
# CREATOR_ELEVENLABS_API_KEY=your_elevenlabs_key

# Music Generation
# CREATOR_MUSIC_PROVIDER=suno
# CREATOR_SUNO_API_KEY=your_suno_key

# Speech Recognition
# CREATOR_ASR_PROVIDER=deepgram
# CREATOR_DEEPGRAM_API_KEY=your_deepgram_key

# ========================================
# PRODUCTION MODULE (OPTIONAL)
# ========================================

# Main n8n URL for Production module
# MAIN_N8N_URL=https://your-n8n-instance.com

# ========================================
# ADVANCED CONFIGURATION (OPTIONAL)
# ========================================

# Redis for caching (optional)
# REDIS_URL=redis://localhost:6379

# Database path (local development)
DATABASE_PATH=data/umbra.db

# Environment (production/development)
ENVIRONMENT=production

# Logging level
LOG_LEVEL=INFO

# Feature flags
# FEATURE_AI_INTEGRATION=true
# FEATURE_R2_STORAGE=true
# FEATURE_METRICS_COLLECTION=true
# FEATURE_DETAILED_LOGGING=false

# ========================================
# LEGACY CONFIGURATION (OPTIONAL)
# ========================================

# System operations
# DOCKER_AVAILABLE=false
# VPS_HOST=your.vps.host
# SSH_PRIVATE_KEY=your_ssh_private_key

# n8n Integration (legacy)
# N8N_API_URL=https://your-n8n.com/api
# N8N_API_KEY=your_n8n_api_key

# Alert thresholds
# CPU_ALERT_THRESHOLD=85
# MEMORY_ALERT_THRESHOLD=85
# DISK_ALERT_THRESHOLD=90

# Security settings
# REQUIRE_ADMIN_CONFIRMATION=true
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS_PER_MINUTE=30

# Skip configuration validation (for testing)
# UMBRA_SKIP_VALIDATION=false
